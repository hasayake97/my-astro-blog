---
import {getEntry} from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Prose from '../components/Prose.astro';
import Cover from '../components/Cover.astro';
import Footer from '../components/Footer.astro';

const entry = await getEntry('blog', 'me');

if (!entry) {
    throw new Error('Blog entry "me" not found.');
}

const {Content} = await entry.render();
---

<Layout>
    <article class="h-full flex flex-col xl:flex-row">
        <Cover idx={0} class="h-[24%] md:h-[30%] xl:h-full xl:flex-1 bg-no-repeat bg-cover bg-center"/>

        <section class="flex-1 xl:pt-16 xl:w-124 xl:flex-none pt-12 px-8 pb-16 relative overflow-hidden">
            <Prose>
                <Content/>
            </Prose>
            <Footer/>
        </section>
    </article>
</Layout>

